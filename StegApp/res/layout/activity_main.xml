<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backrepeat"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stegapp.MainActivity" >

    <Button
        android:id="@+id/btn_steg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_weight="0.78"
        android:text="@string/steganography" 
        android:onClick="startStegActivity"/> 
        
    
    <Button
        android:id="@+id/btn_picpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_weight="0.78"
        android:text="@string/picpass" 
        android:onClick="startPicActivity"/>

    
    <Button
        android:id="@+id/btn_appaccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_weight="0.78"
        android:text="@string/appaccess" 
        android:onClick="startAppActivity"/>
    
</LinearLayout>