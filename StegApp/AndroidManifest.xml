<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stegapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".StegActivity"
            android:label="@string/stegactivitylabel">
            <intent-filter >
                <action android:name="com.example.stegapp.StegActivity"/>
                <category android:name = "android.intent.category.DEFAULT"/>
                
            </intent-filter>
        </activity>
        <activity
            android:name=".FileActivity"
            android:label="@string/fileactivitylabel">
            <intent-filter >
                <action android:name="com.example.stegapp.FileActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity 
            android:name=".HideActivity"
            android:label="@string/hideactivitylabel">
            <intent-filter >
                <action android:name ="com.example.stegapp.FileActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PicActivity"
            android:label="@string/picactivitylabel">
           <intent-filter >
               <action  android:name="com.example.stegapp.PicActivity"/>
               <category android:name="android.intent.category.DEFAULT"/>
           </intent-filter>
        </activity>
        <service android:name=".HideService"></service>
    </application>

</manifest>
